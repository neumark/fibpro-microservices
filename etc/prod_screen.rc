startup_message off
vbell off
bell_msg 'Bell in window %n^G'
defscrollback 30000

bindkey ^f at "#" kill

termcapinfo * ti@:te@

hardstatus alwayslastline '%{= wk}%?%-Lw%?%{r}(%{k}%n*%f%t%?(%u)%?%{r})%{k}%?%+Lw%?%?%= %m/%d %C%A'
activity ''

screen -t gatekeeper_9001 sh -c "python virtualenv/bin/gunicorn --access-logformat '%(h)s %(l)s %(u)s %(t)s "%(r)s" %(s)s %(b)s "%(f)s" "%(a)s" %(T)s %(D)s %({x-request-id}o)s' --access-logfile - -t 0 -b 127.0.0.1:9001 -w 1 -p etc/prod_gatekeeper.pid 'fibpro.gatekeeper:GatekeeperServer().app()'; exec bash"
screen -t logsink_9002 sh -c "python virtualenv/bin/gunicorn -t 0 -b 127.0.0.1:9002 -w 1 -p etc/prod_logsink.pid 'fibpro.logsink:LogSinkServer().app()'; exec bash"
